# Deployment Instructions Template
# Copy this to .env file and fill in the actual values after deploying services

# Backend Environment Variables (Render)
DATABASE_URL=mysql://username:password@host:port/database
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
JWT_SECRET=your_generated_jwt_secret_here
AI_SERVICE_URL=https://your-ai-service.onrender.com
FRONTEND_URL=https://your-app.netlify.app

# AI Service Environment Variables (Render)
PORT=8000
CORS_ORIGINS=https://your-app.netlify.app,https://your-backend.onrender.com

# Frontend Build Environment Variables (Netlify)
# Set in Netlify dashboard under Site settings > Environment variables
# BACKEND_API_URL=https://your-backend.onrender.com/api
